<script>
  // Minimal JS blueprint: collect field values generically (no field names used)
  function collect(){
    const els = Array.from(document.querySelectorAll('.panel input, .panel textarea, .panel select'));
    return els.map((el,idx)=>({i: idx, v: el.value}));
  }

  function ghostSave(){
    const snapshot = collect();
    // replace with AI-managed persistence or paste to front-end-only host
    console.log('ghost save', snapshot);
    flash('[saved]');
  }

  function handleSubmit(e){
    e.preventDefault();
    const payload = collect();
    console.log('submit', payload); // replace with AI-driven uploader or local logic
    flash('[submitted]');
    return false;
  }

  function flash(text){
    const n = document.createElement('div');
    n.textContent = text;
    Object.assign(n.style,{position:'fixed',right:'18px',bottom:'18px',padding:'8px 12px',
      background:'linear-gradient(90deg,var(--neon1),var(--neon2))',color:'#001',
      borderRadius:'8px',fontWeight:700,boxShadow:'0 8px 24px rgba(0,0,0,0.6)',zIndex:9999});
    document.body.appendChild(n);
    setTimeout(()=>n.remove(),1200);
  }
</script>
